<div class="row justify-content-center">
  <div class="col-md-6 form-container cool-border">
    <h2 class="header-cen-underline">Login</h2>

    <form class="form login-form">
      <div class="form-text">
        <label for="email-login">email:</label>
        <input class="input-box" type="text" id="email-login" />
      </div>
      <div class="form-text">
        <label for="password-login">password:</label>
        <input class="input-box" type="password" id="password-login" />
      </div>
      <div class="form-button">
        <button class="login_button" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6 form-container cool-border">
    <h2 class="header-cen-underline">Signup</h2>

    <form class="form signup-form">
      <div class="form-text">
        <label for="name-signup">name:</label>
        <input class="" type="text" id="name-signup" />
      </div>
      <div class="form-text">
        <label for="email-signup">email:</label>
        <input class="input-box" type="text" id="email-signup" />
      </div>
      <div class="form-text">
        <label for="password-signup">password:</label>
        <input class="input-box" type="password" id="password-signup" />
      </div>
      <div class="form-button">
        <button class="login_button" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>