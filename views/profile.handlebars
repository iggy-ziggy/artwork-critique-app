<h3>{{name}}</h3>
{{!-- <img src="" alt=""> --}}
{{!-- {{#if Profile}} --}}
{{!-- if there is no profile image, render a placeholder image from db, else render profile image --}}
{{#if profile.image_url}}
<img src="{{profile.image_url}}" alt="profile-image">
{{else}}
<img src="https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png" id="profile-placeholder" alt="placeholder-image" width="200" height="200">
{{/if}}
<div>
    <p>{{profile.name}}</p>
    <p>{{profile.pronouns}}</p>
    <p>"{{profile.bio}}"</p>
    <p>Preferred media: {{profile.media}}</p>
</div>

<a href="/api/profile/update/new">Edit profile</a>

{{!-- {{/if}} --}}
{{#each artworks as |artwork| }}
<div>
    <h3>Your Gallery</h3>
    <p>{{title}}</p>
    {{#if image_url}}
    <a href="/api/artwork/{{artwork_id}}"><img src="{{image_url}}" alt="artwork thumbnail"></a>
    {{else}}
    <a href="/api/artwork/{{artwork_id}}"><img src="https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png" id="profile-placeholder" alt="placeholder-image" width="100" height="100"></a>
    {{/if}}
</div>
{{/each}}
