<h3>{{name}}</h3>
{{!-- <img src="" alt=""> --}}
{{!-- {{#if Profile}} --}}
{{!-- if there is no profile image, render a placeholder image from db, else render profile image --}}
{{#if profile.image}}
<img src="{{profile.image}}" alt="profile-image">
{{else}}
<img src="https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png" id="profile-placeholder" alt="placeholder-image" width="200" height="200">
{{/if}}
{{#if Profile}}
<div>
    <p>Pronouns: {{profile.pronouns}}</p>
    <p>Bio: {{profile.bio}}</p>
    <p>Preferred media: {{profile.media}}</p>
</div>
{{else}}
<a href="/api/profiles/update">Create your profile!</a>
{{/if}}
{{!-- {{/if}}
