<h1>Update Profile</h1>

<form class="update-profile-form" enctype="multipart/form-data" action="/api/profile/update" method="POST">
  <!-- Profile Picture: Display current image if it exists -->
  <label for="profile-picture">Profile Picture</label>
  <input type="file" id="profile-picture" name="profilePicture" accept="image/*">
  
  {{#if profile.image_url}}
    <!-- Display the current profile picture if available -->
    <img src="{{profile.image_url}}" alt="Current Profile Picture">
  {{/if}}

  <!-- Name: Display current name if it exists, otherwise use a placeholder -->
  <label for="name">Name</label>
  <input type="text" id="name" name="name" value="{{#if profile.name}}{{profile.name}}{{/if}}">
  
  <!-- Pronouns: Display current pronouns if they exist, otherwise use a placeholder -->
  <label for="pronouns">Pronouns</label>
  <input type="text" id="pronouns" name="pronouns" value="{{#if profile.pronouns}}{{profile.pronouns}}{{/if}}">
  
  <!-- Bio: Display current bio if it exists, otherwise use a placeholder -->
  <label for="bio">Bio</label>
  <textarea id="bio" name="bio">{{#if profile.bio}}{{profile.bio}}{{/if}}</textarea>
  
  <!-- Media: Display current media if it exists, otherwise use a placeholder -->
  <label for="media">Media</label>
  <input type="text" id="media" name="media" value="{{#if profile.media}}{{profile.media}}{{/if}}">
  
  <button type="submit">Update Profile</button>
</form>

<script src="/js/profile.js"></script>